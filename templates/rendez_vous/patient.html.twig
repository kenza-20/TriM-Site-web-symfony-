                                            </div>


                                            <div class="form-group">
                                                {{ form_label(form.heure, 'Sélectionner l\'heure :', {'label_attr': {'class': 'control-label'}}) }}
                                                <div class="input-group date" id="heurePicker" data-target-input="nearest">
                                                    {{ form_widget(form.heure, {'attr': {'class': 'form-control form-control-user datetimepicker-input', 'data-target': '#heurePicker'}}) }}
                                                    <div class="input-group-append" data-target="#heurePicker" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-clock"></i></div>
                                                    </div>
                                                </div>
                                            </div>


                                            <a >
                                                <button type="submit" class="btn btn-primary btn-user btn-block">Enregistrer</button>
                                            </a>
                                            {{ form_end(form) }}

                                        </form>


                                    </div>
