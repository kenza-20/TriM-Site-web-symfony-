                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Prendre Rendez-vous!</h1>
                                            <form id="medecinsForm" action="{{ path('app_rendez-vous2') }}" method="post">
                                                <div class="form-group row">
                                                    <label for="fieldName" >Sélectionner la spécialité :</label>

                                                    <select id="fieldName" name="fieldName" class="form-control">
                                                        <option value="" disabled selected>Spécialité</option>
                                                        <option value="Dentiste">Dentiste</option>
                                                        <option value="Pediatre">Pediatre</option>
                                                        <option value="Generaliste">Généraliste</option>
                                                    </select>
                                                </div>
                                            </form>
                                            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                                            <script>
                                                $(document).ready(function() {
                                                    $('#fieldName').change(function() {
                                                        $('#medecinsForm').submit();
                                                    });
                                                });
                                            </script>

                                            {{ form_start(form, {'attr': {'class': 'user'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {# Champ caché pour idMedecins #}
                                            {{ form_widget(form.idMedecins, {'attr': {'style': 'display: none;'}}) }}

                                            {{ form_label(form.idMedecins, 'Médecin :', {'label_attr': {'class': 'control-label'}}) }}
                                            {{ form_errors(form.idMedecins) }}

                                            <select id="medecin" name="medecin" class="form-control">
                                                <option value="" disabled selected>Médecin</option>
                                                {% for medecin in medecins %}
                                                    <option value="{{ medecin.id }}">{{ medecin.nom }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>

                                        <script>
                                            // Écoutez le changement dans le select et mettez à jour la valeur de idMedecins
                                            document.getElementById('medecin').addEventListener('change', function() {
                                                var selectedMedecinId = this.value;
                                                document.getElementById('{{ form.idMedecins.vars.id }}').value = selectedMedecinId;
                                            });
                                        </script>




                                        <form class="user">
                                            <div class="form-group">
                                                {{ form_label(form.motif, 'Sélectionner le motif :', {'label_attr': {'class': 'control-label'}}) }}
                                                {{ form_widget(form.motif, {'attr': {'class': 'form-control form-control-user' }}) }}

                                            </div>



                                            <div class="form-group">
                                                {{ form_label(form.date, 'Sélectionner la date :', {'label_attr': {'class': 'control-label'}}) }}
